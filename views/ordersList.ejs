<!DOCTYPE HTML>
<html>
    <% include partials/head.ejs %>
    <body>
        <% include partials/header.ejs %>
        <div class="container">
            <ul class="nav nav-tabs">
                <li class="active"><a href="/">Order</a></li>
                <li><a href="/ordersList">Orders List</a></li>
            </ul>

            <br/>

            <select class="searchOptions" name="searchOptions" id="searchOptions"></select>
            <form method="get" class="search" id="phoneSearch">
                <input class="form-control" placeholder="Search" name="searchInput" id="searchInput" type="text">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>    
            </form>
            

            <br/>
            <div class="row">
                <div class="col-md-6">
                    <table class="table table-striped table-bordered
                    table-hover table-condensed" id="orders">
                        <tr>
                            <th>Name</th>
                            <th>Phone Number</th>
                            <th>Streety Address</th>
                            <th>City</th>
                            <th>Postal Code</th>
                            <th>Pizza Quantity</th>
                            <th>Pizza Size</th>
                            <th>Pizza Size Cost</th>
                            <th>Pizza Crust</th>
                            <th>Pizza Crust Cost</th>
                            <th>Pizza Toppings</th>
                            <th>Pizza Toppings Cost</th>
                            <th>Pizza Total Cost</th>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        <% include partials/footer.ejs %>
        <script src="javascripts/order.js"></script>
    </body>
</html>