<!DOCTYPE HTML>
<html>
    <% include partials/head.ejs %>
    <body>
        <% include partials/header.ejs %>

        <ul class="nav nav-tabs">
            <li class="active"><a href="/">Order</a></li>
            <li><a href="/ordersList">Orders List</a></li>
        </ul>
        <br/>

        <div class="row">
            <div class="col-md-6">
                <form method="post" id="submitForm">
                    <div class="form-group">
                        <label for="customerName">Name</label>
                        <input type="text" required class="form-control" name="customerName" id="customerName" placeholder="Enter your name">
                    </div>
                    <div class="form-group">
                        <label for="phoneNumber">Phone Number</label>
                        <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" placeholder="Phone number here">
                    </div>
                    <div class="form-group">
                        <label for="streetAddress">Street Address</label>
                        <input type="text" class="form-control" id="streetAddress" name="streetAddress" placeholder="Address here">
                    </div>
                    <div class="form-group">
                        <label for="city">City</label>
                        <input type="text" class="form-control" id="city" name="city" placeholder="City here">
                    </div>
                    <div class="form-group">
                        <label for="postalCode">Postal Code</label>
                        <input type="text" class="form-control" id="postalCode" name="cipostalCodety" placeholder="A0A 0A0">
                    </div>

                    <button type="submit" class="btn btn-success">Place an order!</button>
                    <div id="order-request-status">
                    </div>
                </form>
            </div>

        </div>
        
        <% include partials/footer.ejs %>
        <script src="javascripts/script.js" ></script>
    </body>
</html>

